{% extends 'layout.twig' %}
{% block user %}
{% if user %}
Connected as : {{user.username}}
{% endif %}
{% endblock %}
{% block content %}

<div class="widget-box transparent">
											<div class="widget-header widget-header-flat">
												<h4 class="widget-title lighter">
													<i class="ace-icon fa fa-star orange"></i>
													Popular products
												</h4>

												<div class="widget-toolbar">
													<a href="#" data-action="collapse">
														<i class="ace-icon fa fa-chevron-up"></i>
													</a>
												</div>
											</div>

											<div class="widget-body">
												<div class="widget-main no-padding">
													<table class="table table-bordered table-striped">
														<thead class="thin-border-bottom">
															<tr>
																<th>
																	<i class="ace-icon fa fa-caret-right blue"></i>Product
																</th>
                                                                <th>
																	<i class="ace-icon fa fa-caret-right blue"></i>Picture
																</th>

																<th>
																	<i class="ace-icon fa fa-caret-right blue"></i>Price
																</th>

																<th class="hidden-480">
																	<i class="ace-icon fa fa-caret-right blue"></i>Source
																</th>
															</tr>
														</thead>

														<tbody>
                                                            {% for m in magasins %}


															<tr>
																<td>{{m.titre}}</td>
<td><img src="{{m.photo}}" width="60px" alt="product" /></td>
																<td>
																	
																	<b class="green">{{m.prix}}</b>
																</td>

																<td class="hidden-480">
																	<span class="label label-info arrowed-right arrowed-in">{{m.source}}</span>
																</td>
															</tr>
{% endfor %}
														</tbody>
													</table>
												</div><!-- /.widget-main -->
											</div><!-- /.widget-body -->
										</div>

{% endblock %}