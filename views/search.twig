{% extends 'layout.twig' %}
{% block content %}
<h1>{{ title}}</h1>

<form action="" method="post">
<select name="choix">
    <option name="choixx" value="Mytek">Mytek</option>
    <option name="choixx" value="TunisiaNet">TunisiaNet</option>
    <option name="choixx" value="technopro">TechnoPro</option>
</select>
<input type="submit"/>
    

</form>

	<div class="row">
							<div class="col-xs-12">
								<!-- PAGE CONTENT BEGINS -->
							 <div class="space-24"></div>
								<h3 class="header smaller black">Small Style</h3>

								<div class="row">
 									<!-- #section:pages/pricing.small-header -->
									<div class="col-xs-4 col-sm-3 pricing-span-header">
										<div class="widget-box transparent">
											<div class="widget-header">
												<h5 class="widget-title bigger lighter">Package Name</h5>
											</div>

											<div class="widget-body">
												<div class="widget-main no-padding">
													<ul class="list-unstyled list-striped pricing-table-header">
														<li>Disk Space </li>
														<li>Ram </li>
														<li>Email Accounts </li>
														<li>MySQL Databases </li>
														<li>Ad Credit </li>
														<li>Free Domain </li>
													</ul>
												</div>
											</div>
										</div>
									</div>
                                     
									<!-- /section:pages/pricing.small-header -->

									<!-- #section:pages/pricing.small-body -->
									<div class="col-xs-8 col-sm-9 pricing-span-body">
                                        {%for e,m in tunisianetpcs %}
										<div class="pricing-span">
											<div class="widget-box pricing-box-small widget-color-blue3">
												<div class="widget-header">
													<h5 class="widget-title bigger lighter">{{m.source}}</h5>
												</div>

												<div class="widget-body">
													<div class="widget-main no-padding">
														<ul class="list-unstyled list-striped pricing-table">
															<li> 10 GB </li>
															<li> {{m.ram}} </li>
															<li> 100 </li>
															<li> 10 </li>
															<li> $10 </li>

															<li>
																<i class="ace-icon fa fa-times red"></i>
															</li>
														</ul>

														<div class="price">
															<span class="label label-lg label-inverse arrowed-in arrowed-in-right">
																{{m.prix}}
																<small>/TTC</small>
															</span>
														</div>
													</div>

													<div>
														<a href="#" class="btn btn-block btn-sm btn-danger">
															<span>Buy</span>
														</a>
													</div>
												</div>
											</div>
										</div>
                                         {% endfor %}
								    </div>

									<!-- /section:pages/pricing.small-body -->
								</div><!-- PAGE CONTENT ENDS -->
							</div><!-- /.col -->
						</div><!-- /.row -->
					
{% endblock %}
